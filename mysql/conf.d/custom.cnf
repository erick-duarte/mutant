[mysqld]
default_authentication_plugin=mysql_native_password
sql_mode = ''
max_connections = 500
interactive_timeout = 300
wait_timeout = 300
federated
host_cache_size=0
connect_timeout = 5
default-time-zone = America/Sao_Paulo

disable-log-bin = 1
performance-schema = 0
local-infile = 0
mysqlx = 0

innodb-log-buffer-size = 262144
innodb-read-io-threads = 1
innodb-write-io-threads = 1
innodb_buffer_pool_instances = 0
innodb_log_buffer_size = 0
innodb_read_io_threads = 0
innodb_write_io_threads = 0
innodb_stats_on_metadata = 0
innodb_file_per_table = 0
innodb_buffer_pool_size = 512M
thread_cache_size = 0
lower_case_table_names = 2



tmp_table_size = 1024
max_heap_table_size = 16384

read_buffer_size = 8192
join_buffer_size = 128
sort_buffer_size = 32768
read_rnd_buffer_size = 1

slow-query-log = 1
long_query_time = 2
slow_query_log_file = /var/log/mysql_slow_query.log